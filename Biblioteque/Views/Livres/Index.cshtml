@model IEnumerable<Biblioteque.Models.Livre>

@{
    ViewData["Title"] = "Index";
}


<main class="container">
    <section class="row g-5 p-5">
       
 
    
@foreach (var item in Model) {
    
                   
                    <article class="row-1 col-lg-3 col-md-4 col-sm-6 animation-home">
                        <figure class="border border-dark">
                    <a asp-action="Details" asp-route-id="@item.Id">
                    <img class="img-fluid" src="~/Upload/@Html.DisplayFor(modelitem => item.CheminImage)" alt="Couverture de Livres" />
                            </a>
                        </figure>
                    </article>


         
         
}

</section>
</main>


        



