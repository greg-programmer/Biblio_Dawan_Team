@model List<Livre>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/biblio.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/css.css" asp-append-version="true" />
    <title>Site de Bibiloteque</title>
</head>
<body>

    <section class="container">
        <main class="row">

            <aside class="shadow p-3 mb-5 bg-body rounded col-xl-3 col-lg-10 col-md-12 col-sm-12 col-xs-12 row gy-3 gx-3">
                <h3>Last Book</h3>
                @for (int i = 0; i < 4; i++)
                {
                    <a class="col-9 col-xl-6 col-md-3 col-sm-3 animation-home" asp-controller="Livres" asp-action="Details" asp-route-id="@Model[i].Id">
                        <img class=" img-fluid mr-3 " src="~/Upload/@Html.DisplayFor(modelitem => Model[i].CheminImage)" alt="Couverture de Livres" />
                    </a>

                }

            </aside>





            <article class="2 col-xl-7 col-lg-10 col-md-12 col-sm-12 d-none d-sm-block">
                <figure class="col-xl-9 col-md-12 col-sm-12">
                    <div class=" col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        <img src="~/Upload/@Html.DisplayFor(modelitem => Model[0].CheminImage)">
                        <div class="containerUlP ">
                            <ul>
                                <li>Titre :  @Html.DisplayFor(modelitem => Model[0].Titre) </li>
                                
                                <li>Date de parution : @Html.DisplayFor(modelitem => Model[0].Date_Parution)</li>
                               
                                <li class ="truncate">
                                    <p >
                                        @Html.DisplayFor(modelitem => Model[0].Synopsis)
                                    </p>
                                </li>
                                <a asp-controller="Livres" asp-action="Details" asp-route-id="@Model[0].Id">
                                    <button class="m-2"> Afficher détails du livre</button>
                                </a>
                            </ul>
                        </div>
                    </div>
                </figure>
            </article>
            <aside class="shadow p-3 mb-5 bg-body rounded col-xl-2 col-lg-10 col-md-12 col-sm-12 col-xs-12 row gy-3 gx-3 animation-home">
                <h3>Le coup de coeur</h3>
                @foreach(var livre in Model)
                {
                   if(livre.Id == 17)
                   {
                        <a class="col-9 col-xl-12 col-md-3 col-sm-3" asp-controller="Livres" asp-action="Details" asp-route-id="17">
                            <img class="img-fluid" src="~/Upload/@Html.DisplayFor(modelitem => livre.CheminImage)">
                        </a>

                   }
                }
                
            </aside>
        </main>
    </section>

</body>
</html>
